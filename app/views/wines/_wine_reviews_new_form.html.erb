<%= form_with(model: @review, local: true) do |f| %>

  <%= f.hidden_field :wine_id, value: @wine.id %>

  <div class="form-group">
    <%= f.label :comment %>
    <%= f.text_area :comment, rows: "3", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :rating %>

    <%= f.text_field :rating, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :user_id %>

    <%= f.collection_select :user_id, UserProfile.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.submit "Create review", class: "btn btn-block btn-outline-secondary" %>
<% end %>
