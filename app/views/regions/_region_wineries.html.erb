<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Wineries

    <a data-toggle="collapse" href="#region_wineries_new_form">
      Add winery
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @region.wineries.each do |winery| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to winery, winery %>

        <%= link_to winery, method: :delete, data: { confirm: "Do you really want to delete this winery" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="region_wineries_new_form">
        <%= render partial: "regions/region_wineries_new_form" %>
      </div>
    </div>

  </ul>
</div>
