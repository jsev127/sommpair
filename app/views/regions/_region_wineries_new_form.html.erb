<%= form_with(model: @winery, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :name %>

    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :address %>

    <%= f.text_field :address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :website %>
    <%= f.text_area :website, rows: "3", class: "form-control" %>
  </div>

  <%= f.hidden_field :region_id, value: @region.id %>

  <%= f.submit "Create winery", class: "btn btn-block btn-outline-secondary" %>
<% end %>
