<% was_validated = bookmark.errors.any? %>

<%= form_with(model: bookmark, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for user_id start -->
  <div class="form-group">
    <% user_class = "form-control" %>
    <% user_was_invalid = bookmark.errors.include?(:user) %>

    <% if was_validated %>
      <% if user_was_invalid %>
        <% user_class << " is-invalid" %>
      <% else %>
        <% user_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :user_id %>
    <!-- Input for user_id start -->
    <%= f.collection_select :user_id, UserProfile.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for user_id end -->
    <% if user_was_invalid %>
      <% bookmark.errors.full_messages_for(:user).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for user_id end -->
  <!-- Label and input for wine_id start -->
  <div class="form-group">
    <% wine_class = "form-control" %>
    <% wine_was_invalid = bookmark.errors.include?(:wine) %>

    <% if was_validated %>
      <% if wine_was_invalid %>
        <% wine_class << " is-invalid" %>
      <% else %>
        <% wine_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :wine_id %>
    <!-- Input for wine_id start -->
    <%= f.number_field :wine_id, class: wine_class, placeholder: "Enter wine" %>
    <!-- Input for wine_id end -->
    <% if wine_was_invalid %>
      <% bookmark.errors.full_messages_for(:wine).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for wine_id end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
