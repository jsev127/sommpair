<% was_validated = winery.errors.any? %>

<%= form_with(model: winery, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% name_class = "form-control" %>
    <% name_was_invalid = winery.errors.include?(:name) %>

    <% if was_validated %>
      <% if name_was_invalid %>
        <% name_class << " is-invalid" %>
      <% else %>
        <% name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :name %>
    <%= f.text_field :name, class: name_class, placeholder: "Enter name" %>
    <% if name_was_invalid %>
      <% winery.errors.full_messages_for(:name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% address_class = "form-control" %>
    <% address_was_invalid = winery.errors.include?(:address) %>

    <% if was_validated %>
      <% if address_was_invalid %>
        <% address_class << " is-invalid" %>
      <% else %>
        <% address_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :address %>
    <%= f.text_field :address, class: address_class, placeholder: "Enter address" %>
    <% if address_was_invalid %>
      <% winery.errors.full_messages_for(:address).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% website_class = "form-control" %>
    <% website_was_invalid = winery.errors.include?(:website) %>

    <% if was_validated %>
      <% if website_was_invalid %>
        <% website_class << " is-invalid" %>
      <% else %>
        <% website_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :website %>
    <%= f.text_area :website, class: website_class, placeholder: "Enter website" %>
    <% if website_was_invalid %>
      <% winery.errors.full_messages_for(:website).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% region_class = "form-control" %>
    <% region_was_invalid = winery.errors.include?(:region) %>

    <% if was_validated %>
      <% if region_was_invalid %>
        <% region_class << " is-invalid" %>
      <% else %>
        <% region_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :region_id %>
    <%= f.collection_select :region_id, Region.all, :id, :to_s, {}, class: "form-control" %>
    <% if region_was_invalid %>
      <% winery.errors.full_messages_for(:region).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
